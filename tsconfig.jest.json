{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "paths": {
      "@formily-portal/vant": ["packages/components/src"],
      "@formily-portal/vant/esm/*": ["packages/components/src/*"],
      "@formily-portal/antdv/lib/*": ["packages/components/src/*"],
      "@formily-portal/vant-*": ["packages/*/src"]
    }
  },
  "exclude": ["./packages/*/esm", "./packages/*/lib"]
}
